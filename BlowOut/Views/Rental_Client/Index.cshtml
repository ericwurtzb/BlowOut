@model BlowOut.Models.Rental_Client

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm()) 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.client.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.client.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.client.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rental.RentalName)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ClientID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ClientID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ClientID })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
