@model BlowOut.Models.Rental_Client
@{
    ViewBag.Title = "AddClient";
}

<h2>Add Client to @Html.DisplayFor(model => model.rental.RentalName) </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Owner for the Car</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.rental.rentalID)
    @Html.HiddenFor(model => model.rental.RentalName)
    @Html.HiddenFor(model => model.rental.Type)
    @Html.HiddenFor(model => model.rental.Price)
    @Html.HiddenFor(model => model.rental.Picture)
  

    <div class="form-group">
        Renting Client
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.rental.ClientID, new SelectList(ViewBag.Names, "ClientID", "FirstName"))
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Owner" class="btn btn-default" />
        </div>
    </div>
</div>
}

